<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_login">

    <ImageView
        android:id="@+id/iv_login_back"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_35"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:paddingTop="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_11"
        android:src="@mipmap/ic_fh_back" />
    <ImageView
        android:id="@+id/iv_login_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_35"
        android:padding="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/ic_fh_login_setting"
        />
    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_fh_login_logo"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_210"
        android:textColor="#0F1534"
        android:gravity="center"
        android:textSize="@dimen/sp_22"
        android:text="欢迎来到虚拟营业厅" />

    <EditText
        android:id="@+id/et_id"
        android:layout_marginTop="@dimen/dp_326"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/sp_14"
        android:background="@color/fh_color_trans"
        android:textColorHint="@color/color_999"
        android:textColor="@color/black"
        style="@style/tv_login_btn" />
    <TextView
        android:layout_marginTop="@dimen/dp_326"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:hint="客户号"
        android:layout_marginLeft="@dimen/dp_26"
        android:gravity="center_vertical|left"
        android:textColor="@color/color_999"

        />
    <EditText
        android:id="@+id/et_pwd"
        android:layout_marginTop="@dimen/dp_376"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/sp_14"
        android:background="@color/fh_color_trans"
        android:textColorHint="@color/color_999"
        android:inputType="textPassword"
        android:textColor="@color/black"
        style="@style/tv_login_btn" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_370"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_height="1px"
        android:background="#e5e5e5"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_420"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_height="1px"
        android:background="#e5e5e5"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_376"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_26"
        android:gravity="center_vertical|left"
        android:text="密码"
        android:textColor="@color/color_999"

        />

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="@dimen/dp_470"
        android:background="@drawable/fh_btn_007_5"
        android:textColor="@color/white"
        android:text="登录"
        android:gravity="center"
        style="@style/tv_login_btn" />

</merge>